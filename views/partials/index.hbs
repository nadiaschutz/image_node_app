{{!-- section --}}
    <section class="section my-4">
        <div class="container text-center">
            <div class="title py-5">
                <h1>Image App</h1>
                <p class="subtitle">Upload Your Images to the Server</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-4">
                    <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
                        <div class="row">
                            <div class="col-8">
                                <input type="file" class="form-control" name="images" id="formFile" multiple>
                            </div>
                            <div class="col-2">
                                <input type="submit" class="btn btn-primary" value="Upload Images">
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            {{!-- display images --}}
            <section class="mt-5">
                    <div class="row">
                            {{#each images}} 
                                {{#each this}}
                                    {{#if imageBase64 }}
                                        {{!-- bootstrap cads --}}
                                            <div class="col-3">
                                                    <div class="card shadow" style="width: 18rem;">
                                                        <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid" alt="...">
                                                        <div class="card-body">
                                                            <p class="text-secondary font-size-09">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                                            <a href="#" class="btn btn-outline-secondary font-size-09">Choose Image</a>
                                                        </div>
                                                    </div>
                                            </div>
                                        {{!-- /bootstrap cads --}}
                                    {{/if}}
                                 {{/each}}
                            {{/each}}
                    </div>
                </section>
            {{!-- /display images --}}

        </div>
    </section>
{{!-- /section --}}